<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>



    <style name="header_button_operate" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#e5e9ec</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">9dip</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="normalTab" parent="@android:style/ButtonBar">
        <item name="android:background">@drawable/maintab_toolbar_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="normalBtn">
        <item name="android:layout_width">77dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">10dip</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="imgTab" parent="@android:style/ButtonBar">
        <item name="android:background">@drawable/maintab_toolbar_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

</resources>
